doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
	body
		block content

script.
	var EnAttenteDeCreation = false;
	var generate = function() {
		if (!EnAttenteDeCreation){
			EnAttenteDeCreation= true;
			$('.graphic').html('<img src="/loading.gif" width="100" ><br><br> Création de la vidéo en cours !');
			$.ajax({
				type:"GET",
				url:"/tools/generate",
				data:{},
				success:function(rep){
					$('.graphic').html('<video controls width="800" height="444" src="GeneratedVideo/'+rep+'" type="video/mp4">Ici la description alternative</video><br><br> Votre vidéo sera disponible pendant 5 minutes avant de disparaitre dans le néant :(');
					EnAttenteDeCreation= false;
				},
				error:function(err){
					$('.graphic').html('Erreur de création de vidéo :<br>'+err);
					EnAttenteDeCreation= false;
				}
			});
		}
	}
